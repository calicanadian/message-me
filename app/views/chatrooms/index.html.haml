%h2.ui.center.aligned.icon.header
  %i.circular.cocktail.icon.blue.inverted
  Cheers

.ui.two.column.grid
  .twelve.wide.column
    .ui.fluid.raised.card.chatbox
      .content
        .ui.feed
          = render @messages
      .extra.content
        = form_for(@message, html: {class: "ui reply form", role: "form"}, url: message_path) do |f|
          .field
            .ui.fluid.icon.input
              = f.text_field :body, placeholder: "Enter a message..."
              = f.button do
                %i.bordered.inverted.blue.edit.icon
  .four.wide.column
    .ui.fluid.raised.card.chatbox
      .content
        .ui.inverted.vertical.menu
          %a.active.item
            Chatroom
          %a.item
            Messages
